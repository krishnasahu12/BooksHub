  <center>
  <div id="log_in">
  <h2>Log in</h2><br>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-row">
      <div class="col-md-4 mb-3">
        <label> Email </label>
        <%= f.text_field :login, class: "form-control" %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-md-4 mb-3">
        <label> Password </label>
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>

  <div class="form-row">
      <div class="col-md-4 mb-3">
    <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    </div>
    <% end %>

    <%= f.submit "Log in", class: "btn btn-danger mb-2" %><br>

    <%= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, method: :post, class: "btn btn-success mb-2" %>
    <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, method: :post, class: "btn btn-primary mb-2" %>

  <% end %>

  <%= render "devise/shared/links" %>
  </div>
  </center>
